@require './page'

.home-blog
  .hero
    height: 400px !important
    h1, .description
      display: none !important

@media (max-width: $MQMobile)
  .home-blog
    .hero
      height: 150px !important

.sidebar-links
  .sidebar-group-items
    li
      .sidebar-link
        position: relative
      .active::before, .sidebar-link:hover::before
        content: '☄️'
        position: absolute
        top: 5px
        left: 8px
        width: 20px
        height: 20px
